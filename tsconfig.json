{
  "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./src",
      "declaration": false,
      "esModuleInterop": true,
      "lib": [
        "ES2019"
      ],
      "module": "ESNext",
      "moduleResolution": "Node",
      "noEmit": false,
      "outDir": "dist",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "target": "ES6"
  }
}